<!doctype html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="shortcut icon" href="assets/images/favicon.png">
    <link rel="stylesheet" href="assets/css/core/libs.min.css">
    <link rel="stylesheet" href="assets/css/qompac-ui.minf700.css?v=1.0.1">
    <link rel="stylesheet" href="assets/css/custom.minf700.css?v=1.0.1">
    <link rel="stylesheet" href="assets/css/dark.minf700.css?v=1.0.1">
    <link rel="stylesheet" href="assets/css/customizer.minf700.css?v=1.0.1" >
    <link rel="stylesheet" href="assets/css/rtl.minf700.css?v=1.0.1">
</head>
<body>

    <%- include('../Includes/sidebar.ejs')%> 
    <%- include('../Includes/header-3.ejs')%>

<div class="content-inner container-fluid pb-0" id="page_layout">
    <h4 class="mb-5">District Office Master</h4>
    <div>
        <div style="margin-left:90%;">
            <a href="/cas/directorate/district">
                <button type="button" class="btn btn-primary next action-button"><i
                        class="fa fa-arrow-left"></i>Back</button>
            </a>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <form action="" method="post">
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="form-label">Directorate Name <span class="text-danger">*</span></label>
                        <input type="text" readonly="true" class="form-control" name="directorate"  value="<%=district.directorate.name %>">
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="form-label">District <span class="text-danger">*</span></label>
                        <select name="district" class="form-control" id="districtName">
                            <option>Select</option>
                            <% for( let dist of districtName ) { %>
                                <option value="<%= dist._id %>"><%= dist.name %></option>
                            <% } %>
                        </select>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="form-group">
                        <label class="form-label">Office Name <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" name="office_name" value="<%= district.name %>">
                    </div>
                </div>
                <div style="display: flex; flex-direction: row; margin: 0 auto; align-items: center; justify-content: center; gap: 10px;"
                class="col-md-7">
                <div class="text-center">
                    <button type="submit" class="btn btn-primary next action-button">Update</button>
                </div>
            </div>
               
               
        </div>
            </form>
        </div>
    </div>

    
</div>

<%- include('../Includes/footer.ejs')%>

</body>

</html>