<script>
    document.addEventListener('DOMContentLoaded', function () {
      const schemeSelect = document.getElementById('schemeSelect');
      const tableBody = document.getElementById('componentSelect');
      const officeSelect= document.getElementById('officeSelect');
      const ofcBnkSelect = document.getElementById('ofcBnkSelect');
      const mop = document.getElementById('MOP');
      const transactionId = document.getElementById('tranId');
      const transactionDate = document.getElementById('tranDate');
      // Function to fetch data from the backend API and update the table

      async function modeofPmnts(){
        const selectedMode=mop.value
        if(selectedMode === 'Select'){
            transactionId.innerHTML='Tansaction ID <span class="text-danger">*</span>'
            transactionDate.innerHTML='Transaction Date <span class="text-danger">*</span>'
        }else{
            transactionId.innerHTML=`${selectedMode} ID <span class="text-danger">*</span>`
            transactionDate.innerHTML=`${selectedMode} Date <span class="text-danger">*</span>`
        }
      }

      async function fetchTableData() {
        const selectedScheme = schemeSelect.value;
        if (selectedScheme === 'Select') {
          tableBody.innerHTML = ''; // Clear the table when 'Select' is chosen
          return;
        }
  
        try {
          const response = await fetch(`/cas/directorate/payments/${selectedScheme}`);
          const data = await response.json();
          console.log(`fetched data`,data.components);
          // Update the table with the fetched data
          tableBody.innerHTML = data.components
            .map(
              (component) => ` <option value=${component.name}>${component.name}</option>`
            )
        } catch (error) {
          console.error('Error fetching data:', error);
        }
      }
  

      async function fetchOfcData() {
          const selectedOfc = officeSelect.value;
          const schemeName=schemeSelect.value;
          if (selectedOfc === 'Select') {
          ofcBnkSelect.innerHTML = ''; // Clear the table when 'Select' is chosen
          return;
        }
  
        try {
          const response = await fetch(`/cas/directorate/payments/bank/${selectedOfc}/${schemeName}`);
          const data = await response.json();
          console.log(`fetched data`,data);
        //   // Update the table with the fetched data
        ofcBnkSelect.innerHTML = data
            .map(
              (bnk) => ` <option value=${bnk.bankId.bank}>${bnk.bankId.bank}</option>`
            )
        } catch (error) {
          console.error('Error fetching data:', error);
        }
      }
  
    //   // Event listener to trigger data fetching when the scheme select value changes
    //   schemeSelect.addEventListener('change', fetchTableData);
      officeSelect.addEventListener('change', fetchOfcData);
      mop.addEventListener('change', modeofPmnts);
  
      // Initially, call the fetch function to populate the table based on the default selected scheme (Select)
    //   fetchTableData();
    });

      // Check if the voucher number exists
  const voucherNo = '<%= voucherNo %>';
    if (voucherNo) {
      // Display the voucher number in a popup
      alert(`Voucher Number created successfully/n: ${voucherNo}`);
    }
  </script>
 
  
